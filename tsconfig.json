{
	"compilerOptions": {
		"target": "ES6",
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"pretty": true,
		"allowUnreachableCode": true,
		"allowUnusedLabels": true,
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"noImplicitUseStrict": false,
		"outDir": "dist/",
		"baseUrl": "src/",
		"removeComments": true,
		//"noEmitHelpers": true,
		"esModuleInterop": true //ważne umożliwia import/export zgodny z CommonJS
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*", "**/*.spec.ts"],
	"compileOnSave": false
}
